<div class="justify-center flex-auto py-6 p-96">
  <table class="w-auto bg-white">
    <thead>
    <tr>
      <td class="py-2 px-3 font-semibold text-indigo-600">Nome</td>
      <td class="py-2 px-3 font-semibold text-indigo-600">Email</td>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr class="w-96 flex-col">
        <td class="w-96">
          <div class="block py-2 px-2 border h-[40px]"><%= user.username %></div>
        </td>
        <td class="w-96">
          <div class="py-2 px-2 border h-[40px]"><%= user.email %></div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>