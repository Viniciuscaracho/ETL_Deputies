<% @deputies.each do |deputy| %>
  <div class="w-full flex mt-5 justify-between rounded-3xl items-center bg-slate-50 shadow-md group relative">
    <div class="px-3 py-5">
      <%= deputy.civil_name %>
    </div>
    <div class="px-16 py-5">
      <%= deputy.party_initials %>
    </div>
    <div class="absolute inset-0 flex rounded-3xl items-center justify-center opacity-0 group-hover:opacity-100 group-hover:bg-opacity-50 bg-gray-300 bg-opacity-0 transition-opacity duration-300">
      <%= heroicon 'eye', variant: :solid, options: { class: 'w-8 h-8 text-black' } %>
    </div>
  </div>
<% end %>